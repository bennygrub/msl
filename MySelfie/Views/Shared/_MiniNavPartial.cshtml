
<!-- logout button -->
<div id="logout" class="btn-header transparent pull-right">
    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <span> <a href="javascript:document.getElementById('logoutForm').submit()" title="Sign Out" data-logout-msg="You can improve your security further after logging out by closing this opened browser"><i class="fa fa-sign-out"></i></a> </span>
    }
</div>
<!-- end logout button -->
